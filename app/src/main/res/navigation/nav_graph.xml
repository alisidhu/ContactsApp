<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactsFragment"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.aft.contacts.ui.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <action
            android:id="@+id/action_contactsFragment_to_contactDetailFragment"
            app:destination="@id/contactDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.aft.contacts.ui.contactdetail.ContactDetailsFragment"
        android:label="ContactDetailFragment"
        tools:layout="@layout/fragment_contact_detail" />
</navigation>